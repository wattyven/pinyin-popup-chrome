{
  "manifest_version": 3,
  "name": "Simplified Pinyin Lookup",
  "version": "1.0",
  "description": "Look up pinyin for selected Simplified Chinese text",
  "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["pinyinDict.json"],
      "matches": ["<all_urls>"]
    }
  ]
}